@model ProductTypes
    <div class="container">
        <h2 class="text-info">Edit Product Type</h2>
        <form asp-action="Edit" method="post">
            <div class="p-4 rounded border">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-2 font-weight-bold">
                        <label asp-for="ProductType"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="ProductType" class="form-control" />
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-primary" value="Update" />
                        <a asp-action="Index" class="btn btn-outline-success"><i class="fas fa-backward"></i> Back To List</a>
                    </div>
                </div>
            </div>
        </form>
</div>
        @section Scripts{
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
